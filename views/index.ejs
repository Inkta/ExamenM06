<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Llibres</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
        
    </head>
    <body ng-app="app">
        
        <div class="container" ng-controller='examenCtrl'>
            <div class="row">
                <div class="col-xs-12">
                    <div class="page-header">
                      <h1>Llibres <small>per a totes les edats</small></h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <!-- Repetir model anterior -->
                    <div class="llibres" ng-repeat="l in llibres">
                        <div class="panel panel-primary">
                            
                            <p class="bg-primary">{{l.titol}}</p>
                            <p> {{l.isbn}}</p>
                            <div class="row">
                                <div class="col-xs-12">
                                    <!--Nom de la funcio a seleccionar quan fem click-->
                                    <button ng-click="esborraLlibre(l.isbn)" class="btn btn-warning"> Esborra </button>
                                    <button ng-click="editaLlibre(l.isbn, l.titol)" class="btn btn-success"> Edita </button>
                                </div>
                                
                            </div>
                            
                        </div>
                        
                    </div>
                </div>
                <div class="col-xs-6">
                    <h3> Llibre Nou </h3>
                    <div>
                        <form>
                          <div class="form-group">
                            <label for="Titol">Titol</label>
                            <!--Nom dels camps que s'envien al fer una peticio-->
                            <input type="text" name="Titol" ng-model="titol" class="form-control" placeholder="Titol">
                          </div>
                          <div class="form-group">
                            <label for="Isbn">Isbn</label>
                            <input type="text" name="Isbn" ng-model="isbn" class="form-control" placeholder="Isbn">
                          </div>
                          <button ng-click="afegirLlibre()" type="submit" class="btn btn-success">Submit</button>
                        </form>
                    </div>
                    
                    <h3> Editar Llibre </h3>
                    <form>
                        <!--Valor dels camps que editarem quan seleccionem el model a editar-->
                      <div class="form-group">
                        <label for="Titol">Titol</label>
                        <input type="text" value="{{titolnou}}" ng-model="titolnou" class="form-control" placeholder="Titol">
                      </div>
                      <div class="form-group">
                        <label for="Isbn">ISBN del llibre : {{editatIsbn}}</label>
                      </div>
                      <button ng-click="editatLlibre()" type="submit" class="btn btn-success">Submit</button>
                    </form>
                        
                </div>
            </div>
        </div>
        <script src="angular.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.11/angular-resource.js"></script>
        <script src="app.js"></script>
    </body>
</html>